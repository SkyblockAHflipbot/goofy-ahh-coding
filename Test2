var = input
def check_numbes(num):
    if num % 1 == 0: True
    else: num == False

def check(name):
    for num in name:
        if check_numbes(num) == True:
            return True
    return False

check(name)
while check(name) == True:
    print("Wrong")
    name = input("enter your first name:")
else:
    print("Okay")

